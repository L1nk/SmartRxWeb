<%= form_for(@medication_conflict) do |f| %>
  <% if @medication_conflict.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medication_conflict.errors.count, "error") %> prohibited this medication_conflict from being saved:</h2>

      <ul>
      <% @medication_conflict.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :medication1_id %><br />
    <%= f.number_field :medication1_id %>
  </div>
  <div class="field">
    <%= f.label :medication2_id %><br />
    <%= f.check_box :medication2_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
