<%= form_for(@medication) do |f| %>
  <% if @medication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medication.errors.count, "error") %> prohibited this medication from being saved:</h2>

      <ul>
      <% @medication.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :alert_id %><br />
    <%= f.number_field :alert_id %>
  </div>
  <div class="field">
    <%= f.label :alert_id %><br />
    <%= f.number_field :alert_id %>
  </div>
  <div class="field">
    <%= f.label :entry_id %><br />
    <%= f.number_field :entry_id %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :importance %><br />
    <%= f.text_field :importance %>
  </div>
  <div class="field">
    <%= f.label :quantity_per_dose %><br />
    <%= f.text_field :quantity_per_dose %>
  </div>
  <div class="field">
    <%= f.label :number_of_doses %><br />
    <%= f.text_field :number_of_doses %>
  </div>
  <div class="field">
    <%= f.label :is_critical %><br />
    <%= f.check_box :is_critical %>
  </div>
  <div class="field">
    <%= f.label :directions %><br />
    <%= f.text_field :directions %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
