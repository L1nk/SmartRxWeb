<%= render 'sidenav' %>

<div class="page_content">

<p id="notice"><%= notice %></p>

<p>
  <b>Medication Name:</b>
  <%= @medication.name %>
</p>

<p>
  <b>Importance:</b>
  <%= @medication.importance %>
</p>

<p>
  <b>Quantity per dose:</b>
  <%= @medication.quantity_per_dose %>
</p>

<p>
  <b>Number of doses:</b>
  <%= @medication.number_of_doses %>
</p>

<p>
  <b>Is critical:</b>
  <%= @medication.is_critical %>
</p>

<p>
  <b>Directions:</b>
  <%= @medication.directions %>
</p>

<p>
  <b>Comment:</b>
  <%= @medication.comments %>
</p>

<p>
  <b>Has Alert?</b>
  <%= @medication.alert_id ? 'yes' : 'no' %>
</p>


<%= link_to 'Edit', edit_medication_path(@medication) %> |
<%= link_to 'Back', medications_path %>

</div>
